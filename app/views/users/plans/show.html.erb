<h2 class="mb-3"><%= @training_schedule.training.title %></h2>

<div class="card mb-4">
  <div class="card-body">
    <p><strong>内容:</strong> <%= @training_schedule.training.description %></p>

    <p>
      <strong>日時:</strong>
      <%= @training_schedule.start_time.strftime("%Y/%m/%d %H:%M") %>
      <% if @training_schedule.end_time.present? %>
        ～ <%= @training_schedule.end_time.strftime("%H:%M") %>
      <% end %>
    </p>

    <p><strong>会場:</strong> <%= @training_schedule.room&.name || "未定" %></p>
  </div>
</div>

<h3>講師</h3>
<div class="card mb-4">
  <div class="card-body">
    <% if @training_schedule.participants.any? %>
      <ul class="list-group list-group-flush">
        <% @training_schedule.participants.each do |user| %>
          <li class="list-group-item"><%= user.name %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">未定</p>
    <% end %>
  </div>
</div>

<div class="mb-3">
  <%= link_to "戻る", users_plans_path, class: "btn btn-secondary" %>
</div>