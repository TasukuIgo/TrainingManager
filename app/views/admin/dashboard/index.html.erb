<h1 class="mb-4">Admin Dashboard</h1>

<div class="row">
  <!-- 研修セクション -->
  <div class="col-md-6 mb-4">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        研修（Training）
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= link_to "登録済み研修一覧", admin_trainings_path, class: "btn btn-outline-primary w-100 text-start" %></li>
        <li class="list-group-item"><%= link_to "研修作成", new_admin_training_path, class: "btn btn-outline-success w-100 text-start" %></li>
        <li class="list-group-item"><%= link_to "カレンダー", admin_training_schedules_path, class: "btn btn-outline-info w-100 text-start" %></li>
      </ul>
    </div>
  </div>

  <!-- プランセクション -->
  <div class="col-md-6 mb-4">
    <div class="card shadow-sm">
      <div class="card-header bg-success text-white">
        プラン（Plan）
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= link_to "プラン一覧", admin_plans_path, class: "btn btn-outline-primary w-100 text-start" %></li>
        <li class="list-group-item"><%= link_to "プラン作成", new_admin_plan_path, class: "btn btn-primary w-100" %></li>
      </ul>
    </div>
  </div>
</div>

<hr>

<% if current_user.admin? %>
  <div class="mt-4 text-center">
    <%= link_to "ユーザー一覧（管理者用）", admin_users_list_index_path,
                class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

#開発確認用
<p>
  ログイン中ユーザーID：
  <%= current_user.id %>
</p>

<p>
  ログインID（name）：
  <%= current_user.name %>
</p>

<p>
  表示名（real_name）：
  <%= current_user.real_name.presence || "未設定" %>
</p>

<p>
  ロール：
  <%= current_user.role.presence || "未設定" %>
</p>
