<h2 class="mb-4">ユーザー一覧</h2>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>名前</th>
      </th>
      <th>ログインID</th>
      <th>ロール</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.real_name %></td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to "編集", edit_admin_users_list_path(user), class: "btn btn-sm btn-outline-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
