<h2 class="mb-4">ユーザーのロール編集</h2>

<%= form_with model: @user, url: admin_users_list_path(@user), method: :patch, local: true, html: { class: "mb-4" } do |f| %>
  <div class="mb-3">
    <%= f.label :role, "ロール", class: "form-label" %>
    <%= f.select :role, [["管理者", "admin"], ["講師", "instructor"], ["一般", "user"]],
                 {}, class: "form-select" %>
  </div>

  <%= f.submit "更新", class: "btn btn-primary" %>
  <%= link_to "戻る", admin_users_list_index_path, class: "btn btn-secondary ms-2" %>
<% end %>
