<!-- app/views/admin/trainings/index.html.erb -->
<h1>研修一覧</h1>

<%= link_to "＋ 新規研修作成", new_admin_training_path %>

<hr>

<table border="1" cellpadding="8">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成日</th>
    </tr>
  </thead>
  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.id %></td>
        <td>
          <%= link_to training.title, admin_training_path(training) %>
        </td>
        <td><%= l training.created_at, format: :short %></td>
      </tr>
    <% end %>
  </tbody>
</table>
