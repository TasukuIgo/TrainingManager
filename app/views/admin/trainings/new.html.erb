<!-- app/views/admin/trainings/new.html.erb -->
<h1>研修作成（管理者）</h1>

<%= form_with model: [:admin, @training], local: true do |f| %>
  <div>
    <%= f.label :title, "研修タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "研修内容" %><br>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <div>
    <%= f.submit "作成する" %>
  </div>
<% end %>

<% if @training.errors.any? %>
  <ul>
    <% @training.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
