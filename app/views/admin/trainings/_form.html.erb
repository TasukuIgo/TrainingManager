<%= form_with model: [:admin, @training], local: true do |f| %>
  <% if @training.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@training.errors.count, "件のエラー") %>があります：</h5>
      <ul class="mb-0">
        <% @training.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "研修タイトル", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "研修内容", class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <!-- ここからPDFアップロード追加 -->
  <div class="mb-3">
    <%= f.label :materials, "研修資料（PDF）", class: "form-label" %>
    <%= f.file_field :materials, multiple: true, accept: "application/pdf", class: "form-control" %>

    <% if @training.materials.attached? %>
      <p class="mt-2">既存の資料：</p>
      <ul>
        <% @training.materials.each do |file| %>
          <li>
            <%= link_to file.filename.to_s,
                        rails_blob_path(file, disposition: "attachment") %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <!-- ここまでPDFアップロード -->

  <div class="mt-3 d-flex gap-2">
    <%= f.submit @training.persisted? ? "更新する" : "作成する",
        class: "btn btn-primary" %>

    <%= link_to "戻る",
        admin_trainings_path,
        class: "btn btn-secondary" %>

    <%#  Edit のみ削除 %>
    <% if @training.persisted? %>
      <%= link_to "削除",
          admin_training_path(@training),
          data: {
            turbo_method: :delete,
            turbo_confirm: "この研修を削除しますか？"
          },
          class: "btn btn-danger ms-auto" %>
    <% end %>
  </div>
<% end %>
