<%= form_with model: [:admin, @training], local: true, multipart: true do |f| %>
  <% if @training.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@training.errors.count, "件のエラー") %>があります：</h5>
      <ul class="mb-0">
        <% @training.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "研修タイトル", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "研修内容", class: "form-label" %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <!-- 研修資料アップロード -->
  <div class="mb-3">
    <%= f.label :materials, "研修資料（PDF）", class: "form-label" %>
    <%= f.file_field :materials,
          multiple: true,
          accept: "application/pdf",
          class: "form-control" %>

    <% if @training.materials.any? %>
      <p class="mt-2">既存の資料：</p>
      <ul>
        <% @training.materials.each do |material| %>
          <li class="d-flex align-items-center gap-2">
            <%= link_to material.original_filename,
                        "/materials/#{@training.id}/#{material.original_filename}",
                        target: "_blank" %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="mt-3 d-flex gap-2">
    <%= f.submit @training.persisted? ? "更新する" : "作成する",
          class: "btn btn-primary" %>

    <%= link_to "戻る",
          admin_trainings_path,
          class: "btn btn-secondary" %>
  </div>
<% end %>
