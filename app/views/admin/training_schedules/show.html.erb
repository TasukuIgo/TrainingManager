<h2><%= @training_schedule.training.title %></h2>

<p>内容: <%= @training_schedule.training.description %></p>
<p>日時: <%= l @training_schedule.date %></p>
<p>会場: <%= @training_schedule.room.name %></p>

<h3>講師</h3>

<% if @training_schedule.users.any? %>
  <ul>
    <% @training_schedule.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>未定</p>
<% end %>
